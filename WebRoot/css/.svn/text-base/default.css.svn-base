BODY {
	margin: 0px;
	background-color: #EFEBE0;
	font-family: verdana, arial, helvetica, sans-serif;
	font-size: 11px;
	
}

img{border: none;}

/* 
 *  Tabela mais externa. Utilizada nas tags listagem, entrada, tela
 */
.outterTable {
	border: 1px solid #336699;
 	width: 98%;
 	background-color:#F5F5F5;
}

.outterTableHeader{
	color: #FFFFFF;
	background-color: #002D59;
	font-weight: bold;
	font-size: 11px;
	font-family:arial;
	height: 16px;
}

.outterTableHeaderLeft{
	float:left; 
	padding-left: 10px;
	text-transform: uppercase;	
}
.outterTableHeaderRight{
	float:right;
	padding-right: 5px;	
}

.outterTableHeaderLink {
	color: #FFFFFF;	
	font-family: tahoma;
	text-decoration: none;
}

.outterTableHeaderLink:hover {
	text-decoration: underline;
}


/*
 * Janela. Utilizando em JanelaFiltro, JanelaResultados, JanelaEntrada
 */
.window {
	width: 100%;
	background-color: #e5e8eb;
	padding: 4px;
}
.window TD, INPUT, SELECT, BUTTON {
	font-family: tahoma;
	font-size:   11px;
}
.window BUTTON {
	border: 2px #022D5A solid;
	background-color: #FFFFFF;
}

.inputWindow {
}

.resultWindow {
	background-color: white;
	padding: 0px;
}

/*
 * Utilizados em PanelGrids que s�o tabelas de entrada de dados.
 */
.inputTable {
	padding: 1px 3px;
}

.propertyColumn {
	text-align: left;
	padding-right: 70px;
	font-size:10px;
}
 
.labelColumn {
	white-space: nowrap;
	width: 1%;
	padding-right: 20px;
	padding-left: 3px;
	font-weight: bold;
	font-family: Verdana;
	font-size: 10px;
}

